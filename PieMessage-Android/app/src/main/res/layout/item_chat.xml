<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/chat_item_padding"
              android:layout_marginBottom="13dp">

    <View
        android:id="@+id/vUnreadCircle"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:background="@drawable/unread_circle"
        android:visibility="invisible"/>

    <View
        android:background="@drawable/chat_circle"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
    />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tvChatName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/unknown_name"
                android:textSize="20sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/tvLastDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unknown_date"
                android:maxLines="1"
                android:textColor="@color/darkGrey"
                android:layout_weight="0"
                android:layout_gravity="center"
                />

            <View
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:background="@drawable/ic_chevron_right_black_24dp"
                android:backgroundTint="@color/grey"
                android:layout_gravity="center"
                />
        </LinearLayout>

        <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="asdf asdklfjadsklfjakldsjflaksdkafj aslfkasldkfjakl jakj akdj kjkj jfdkfdjskajslkdfj @string/msg_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="2"
            />
    </LinearLayout>

</LinearLayout>